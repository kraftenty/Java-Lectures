
public class my2_string2 {

	public static void main(String[] args) {
		
		int i;
		
		String str1="good python program";
		String str2=str1.substring(5);
		System.out.println("5번째 이후 문자열="+str2);
		String str3=str1.replaceAll("python", "JAVA");
		System.out.println("변경 후 문자열="+str3);
		i=str3.indexOf('J');
		if(i==-1)
			System.out.println("해당문자가 존재하지 않습니다...");
		else
			System.out.println("해당문자는 "+i+"번째 위치하고 있습니다.");
	}

}
